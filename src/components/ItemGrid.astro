---
export interface ItemGridProps {
  items: Array<{
    image: string
    name: string
    description: string
    url: string
  }>
}

const { items } = Astro.props as ItemGridProps
---

<div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-2 my-4">
  {items.map((item) => (
    <a
      href={item.url}
      target="_blank"
      rel="noopener noreferrer"
      class="group flex flex-col rounded-lg border border-border bg-card p-1 transition-all duration-200 hover:shadow-md hover:border-primary/20 no-underline"
    >
      <img
        src={item.image}
        alt={item.name}
        width={200}
        height={200}
        class="w-full aspect-square rounded-md flex-shrink-0 mb-1 mt-1 object-contain"
        loading="lazy"
      />
      <div class="flex-grow px-1">
        <h3 class="font-medium text-foreground mb-0 mt-1 group-hover:text-primary transition-colors text-sm">
          {item.name}
        </h3>
        <p class="text-xs text-muted-foreground line-clamp-2 mt-1 mb-1">
          {item.description}
        </p>
      </div>
    </a>
  ))}
</div> 